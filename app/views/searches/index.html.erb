<%# training#showのスタイリングを流用 %>
<%= render 'shared/header' %>
<%# 検索結果一覧 %>
<div class='index-training-area'>
  <h1><%= @searched_prefecture.name %>の検索結果</h1>
  <ul class='index-training-list'>
    <% if @results.length !=0 %>
      <% @results.each do |result| %>
        <li class='index-training-content'>
          <a href=<%= "trainings/#{result.id}" %>>
            <div class='index-training-name'><%= result.name %></div>
            <div><%= l(result.start_at, format: :long) %></div>
          </a>
        </li>
      <% end %>
    <% else %>
      該当するトレーニングはありません
    <% end %>
  </ul>
</div>
<%= paginate @results %>
<%= render 'shared/footer' %>